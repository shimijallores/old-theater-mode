{
  "manifest_version": 3,
  "name": "Old Theater Mode",
  "version": "1.0",
  "description": "A simple browser extension to revert to old youtube theater mode UI",
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "theater.png"
    }
  }
}
